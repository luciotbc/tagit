<div class="span8">
	<h2>Oi! Vamos conversar?</h2>
	<form class="form">
		<div class="control-group">
			<label class="control-label" for="name">Nome</label>
			<div class="controls">
				<input type="text" id="name" placeholder="Nome">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputEmail">Email</label>
			<div class="controls">
				<input type="text" id="inputEmail" placeholder="Email">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="mensagem">Confirmar Email</label>
			<div class="controls">
				<input type="textarea" id="mensagem" placeholder="Pergunte, reclame, elogie, sugira... ">
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-primary">Enviar</button>
			</div>
		</div>
	</form>
</div>